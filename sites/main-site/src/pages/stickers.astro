---
import PageLayout from "@layouts/PageLayout.astro";
import HexStickerGallery from "../components/HexStickerGallery.astro";
import stickersData from "../data/stickers.json";

// Convert the JSON data into the format expected by HexStickerGallery
const allStickers = Object.entries(stickersData).flatMap(([category, stickers]) => {
    return stickers.map((sticker) => ({
        imageUrl: sticker.imageUrl,
        alt: sticker.alt,
        category: sticker.category,
        link: sticker.link,
        description: sticker.description
    }));
});
---

<PageLayout title="nf-core Stickers" subtitle="Browse our collection of hex stickers organized by category.">
    <main class="py-5">
        <HexStickerGallery stickers={allStickers} />
    </main>
</PageLayout>
