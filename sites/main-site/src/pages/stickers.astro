---
import PageLayout from "@layouts/PageLayout.astro";
import HexStickerGallery from "../components/HexStickerGallery.astro";

// Define pipeline names from the nf-core/logos repository
const pipelineNames = [
    "airrflow",
    "createtaxdb",
    "deepmodeloptim",
    "eager",
    "fetchngs",
    "funcscan",
    "mag",
    "molkart",
    "raredisease",
    "reportho",
    "sarek",
    "taxprofiler",
];

// Create sticker data using GitHub URLs
const stickers = pipelineNames.map((pipeline) => {
    return {
        // Use raw.githubusercontent.com to get the direct image URL
        imageUrl: `https://raw.githubusercontent.com/nf-core/logos/master/hexagon-stickers/${pipeline}/nfcore-${pipeline}-logo-hex-dark.png`,
        alt: `${pipeline} pipeline`,
        category: "pipeline-hexagon-stickers",
        // Link to the GitHub repository
        link: `https://github.com/nf-core/${pipeline}`,
    };
});
---

<PageLayout
    title="nf-core Stickers"
    subtitle="Browse our collection of hex stickers. Filter by category to find specific stickers."
>
    <main class="py-5">
        <div class="container">
            <HexStickerGallery stickers={stickers} />
        </div>
    </main>
</PageLayout>

<style>
    /* CSS variables for theming */
    :root {
        --theme-accent: #1a9655;
        --theme-btn-bg: #fff;
        --theme-btn-text: #222;
        --theme-btn-hover-bg: #f0f0f0;
        --select-arrow: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%231a9655"><path d="M7 10l5 5 5-5H7z"/></svg>');
    }

    :global(body.light-mode) {
        --theme-btn-bg-light: #160f25;
        --theme-btn-text-light: #fff;
        --select-arrow-light: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%23FFFFFF"><path d="M7 10l5 5 5-5H7z"/></svg>');
    }
</style>
